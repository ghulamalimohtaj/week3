extends layout2.pug 

block header 
    header.masthead(style="background-image: url('../public/img/se2.jpeg')")
        .overlay
        .container
            .row
                .col-lg-8.col-md-10.mx-auto
                    .site-heading
                        h2 Software Engineering Dep BLOG
                        span.subheading Faculty of Computer Science, Balkh University.
block content 
    .container
        .row 
            .col-lg-8.col-md-10.mx-auto.text-left
                .h3 Add new blog
                // New blog form
                button(onclick="validate();") Test
                form(action="/create" method="post" onsubmit="return validate();")
                    p(id="err")
                    .form-group
                        label(for="title") Title
                        input(type="text" name="title" id="title" class="form-control" required)
                        p(id="titleErr" style="color:red")
                    .form-group
                        lable(for="author") Author
                        input(type="text" name="author" id="author" class="form-control" required)
                        p(id="authorErr" style="color:red")
                    .form-group 
                        label(for="blog") Blog
                        input(type="text" name="blog" id="body" class="form-control" required)
                        p(id="bodyErr" style="color:red")
                    input(type="submit" value="Post" class="btn btn-success")