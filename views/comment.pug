extends layout2.pug 

block header 
    header.masthead(style="background-image: url('../public/img/se2.jpeg')")
        .overlay
        .container
            .row
                .col-lg-8.col-md-10.mx-auto
                    .site-heading
                        h2 Software Engineering Dep BLOG
                        span.subheading Faculty of Computer Science, Balkh University.
block content 
    .container
        .row
            .col-lg-8.col-md-10.mx-auto
                    .post-preview
                    input(type="hidden" name="id" class="form-control" id="objId" value=`${comment.id}`)
                    
                    form(action="/comment/"+`${comment.id}`+"?_method=PUT" method="POST")
                        .form-group
                            input(type="hidden" name="post_id" value=`${comment.post_id}`)
                            label(for="title") comment
                            input(type="text" name="comment" class="form-control" value=`${comment.comment}`)
                        .from-group
                            input(type="submit" value="Update comment" class="btn btn-success")

                    form(action="/comment/"+`${comment.id}`+"?_method=DELETE" method="POST" style="position:relative;left:0px;bottom:50px")    
                        input(type="hidden" name="postId" value=`${comment.post_id}`)
                        input(type="submit" value="Delete comment" class="btn btn-danger" style="float:right")
