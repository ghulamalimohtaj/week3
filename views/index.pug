extends layout.pug 

block header 
    header.masthead(style="background-image: url('public/img/se2.jpeg')")
        .overlay
        .container
            .row
                .col-lg-8.col-md-10.mx-auto
                    .site-heading
                        h2 Software Engineering Dep BLOG
                        span.subheading Faculty of Computer Science, Balkh University.
block content 
    .container
        .row 
            .col-lg-8.col-md-10.mx-auto.text-left 
                a.btn.btn-success(href='/post/create') Create Post
        .row
            .col-lg-8.col-md-10.mx-auto
                each post in posts 
                    .post-preview
                        a(href='/post/'+`${post._id}`)
                            h2.post-title
                                | #{post.title}
                            h3.post-subtitle
                                | #{post.body}
                        p.post-meta
                            | Posted by 
                            a(href='#') #{post.author}
                            |      on #{post.date}
                            form(action="/comment" method="POST" )
                                .form-group
                                    input(type="hidden" name="post_id" value=`${post._id}`)
                                    .row
                                        input(type="text" name="comment" class="form-control" style="width:75%;height:54px")
                                        input(type="submit" value="Comment" style="width:20%;margin-left:5px" class="btn btn-success") 
                hr
                
                hr
                // Pager
                .clearfix
                    a.btn.btn-primary.float-right(href='#') Older Posts &rarr;
